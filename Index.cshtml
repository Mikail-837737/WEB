@model IEnumerable<WWW.Models.Appointment>

@{
    ViewData["Title"] = "Appointments";
}

<h1 class="mb-4">Appointments</h1>

<a asp-action="Create" class="btn btn-primary mb-3">
    + Create New Appointment
</a>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>Member</th>
            <th>Start</th>
            <th>End</th>
            <th>Price</th>
            <th>Status</th>
            <th>Gym</th>
            <th>Trainer</th>
            <th>Service</th>
            <th class="text-end"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MemberId</td>
                <td>@item.StartTime.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@item.EndTime.ToString("dd.MM.yyyy HH:mm")</td>
                <td>@item.Price.ToString("0.00")</td>
                <td>@item.Status</td>
                <td>@item.Gym?.Name</td>
                <td>@item.Trainer?.FullName</td>
                <td>@item.Service?.Name</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.Id"
                       class="btn btn-sm btn-outline-warning me-1">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id"
                       class="btn btn-sm btn-outline-info me-1">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id"
                       class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }

        }
    </tbody>
</table>
