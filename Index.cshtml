@model WWW.Models.FitnessViewModel

<div class="container mt-5">
    <h2>Yapay Zeka Fitness Danışmanı</h2>
    <hr />

    <div class="row">
        <div class="col-md-4">
            @using (Html.BeginForm("Index", "Fitness", FormMethod.Post))
            {
                <div class="form-group">
                    <label>Boy (cm)</label>
                    @Html.TextBoxFor(m => m.Boy, new { @class = "form-control", type = "number", required = "required" })
                </div>
                <div class="form-group mt-2">
                    <label>Kilo (kg)</label>
                    @Html.TextBoxFor(m => m.Kilo, new { @class = "form-control", type = "number", required = "required" })
                </div>
                <div class="form-group mt-2">
                    <label>Hedefiniz</label>
                    @Html.DropDownListFor(m => m.Hedef, new SelectList(new[] { "Kilo Vermek", "Kas Yapmak", "Sıkılaşmak" }), "Seçiniz", new { @class = "form-control" })
                </div>
                <button type="submit" class="btn btn-primary mt-3 w-100" onclick="showLoading()">AI Önerisi Al</button>

                <div id="loadingArea" style="display:none;" class="text-center mt-3">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p>Yapay zeka planını hazırlıyor, lütfen bekleyin...</p>
                </div>

                <script>
                    function showLoading() {
                        document.getElementById('loadingArea').style.display = 'block';
                    }
                </script>
            }
        </div>

        <div class="col-md-8">
            @if (Model != null && !string.IsNullOrEmpty(Model.HataMesaji))
            {
                <div class="alert alert-warning">@Model.HataMesaji</div>
            }

            @if (Model != null && !string.IsNullOrEmpty(Model.Tavsiye))
            {
                <div class="card">
                    <div class="card-body">
                        <h4>Size Özel Plan</h4>
                        <p style="white-space: pre-wrap;">@Model.Tavsiye</p>

                        @if (!string.IsNullOrEmpty(Model.ResimBase64))
                        {
                            <h4 class="mt-4">Hedeflenen Görünüm</h4>
                            <img src="@Model.ResimBase64" class="img-fluid rounded shadow" alt="AI Transformation" />
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>